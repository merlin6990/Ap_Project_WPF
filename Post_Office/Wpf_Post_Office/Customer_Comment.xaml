<Window x:Class="Wpf_Post_Office.Customer_Comment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Post_Office"
        mc:Ignorable="d"
        Title="Customer_Comment" Height="600" Width="800">
    <Grid Background="#14213d">
        <StackPanel>
            <DockPanel>
                <Label HorizontalAlignment="Left" Margin="22" FontSize="50" FontWeight="Bold" Foreground="White">Comment Page</Label>
                <Image Source="Resource/Logo.png" Width="250" Height="150" Margin="20,15,50,0" HorizontalAlignment="Right"></Image>
            </DockPanel>
            <Label HorizontalAlignment="Center" Margin="22" FontSize="20" FontWeight="Bold" Foreground="White">Your Comment</Label>
            <TextBox Name="Search_Box_ID2" Width="597" Height="200" Margin="100,0,100,0" FontSize="15" Background="#780000" BorderBrush="#780000" Foreground="White"/>
            <Button Name="Send_btn" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#70e000" Margin="100,70,100,100" Foreground="#14213d" FontSize="20" FontFamily="Times New Roman" Height="50" Click="Send_btn_Click">
                Send
            </Button>
        </StackPanel>
    </Grid>
</Window>
